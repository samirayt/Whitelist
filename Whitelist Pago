    --local
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

   --windows
   local Window = OrionLib:MakeWindow({Name = "Berserk", HidePremium = false, SaveConfig = true, ConfigFolder = "BerserCgf", IntroEnabled = false})
   
     --tap1
